@model Eserciziofinale_S1M5.Models.Violazioni

@{
    ViewBag.Title = "AggiungiViolazione";
}

<div class="container">
    <h2 class="text-center">Inserisci Violazione</h2>

    <div class="text-center mt-3 mb-3">
        <a href="@Url.Action("ListaViolazioni", "Violazioni")" class="btn btn-primary">Lista delle violazioni</a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center conteiner">
            <div class="d-flex flex-column align-items-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group w-100 d-flex flex-column align-items-center">
                    <h6 class="text-center">Descrizione</h6>
                    @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
                <div class="form-group form-check mt-3">
                    @Html.CheckBoxFor(model => model.Contestabile, new { @class = "form-check-input" })
                    <label for="Contestabile" class="form-check-label">Contestabile</label>
                </div>


                <div class="text-center mt-3">
                    <input type="submit" value="Aggiungi Violazione" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>
