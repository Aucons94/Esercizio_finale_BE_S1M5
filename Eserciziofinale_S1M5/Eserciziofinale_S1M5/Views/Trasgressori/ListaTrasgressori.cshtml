@model IEnumerable<Eserciziofinale_S1M5.Models.Trasgressori>

@{
    ViewBag.Title = "ListaTrasgressori";
}

<div class="container text-center">
    <div class="row">
        <div>
            <h2 class="text-center mb-4">Lista dei trasgressori</h2>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Eserciziofinale_S1M5.Models.Trasgressori trasgressore in Model)
            {
                <tr>
                    <td>@trasgressore.Cognome</td>
                    <td>@trasgressore.Nome</td>
                    <td>@trasgressore.Indirizzo</td>
                    <td>@trasgressore.Citta</td>
                    <td>@trasgressore.Cap</td>
                    <td>@trasgressore.CodiceFiscale</td>
                    <td class="d-flex justify-content-evenly">
                        @Html.ActionLink("Modifica", "ModificaTrasgressore", "Trasgressori", new { IdAnagrafica = trasgressore.IdAnagrafica }, new { @class = "btn btn-success btn-sm" })
                        <form action="@Url.Action("EliminaTrasgressore", "Trasgressori")" method="post">
                            @Html.Hidden("IdAnagrafica", trasgressore.IdAnagrafica)
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("AggiungiTrasgressore", "Trasgressori")" class="btn btn-primary">Aggiungi trasgressore</a>
    </div>
</div>
